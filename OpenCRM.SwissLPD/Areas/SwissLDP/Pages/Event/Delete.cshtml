@page
@model OpenCRM.SwissLPD.Areas.SwissLDP.Pages.Event.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header text-center">
                                <h3 class="font-weight-light my-4">Delete</h3>
                                <h4>Are you sure you want to delete this?</h4>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">
                                       Description
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Model.Data.Description)
                                    </dd>
                                    <dt class="col-sm-4">
                                        StartDate
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Model.Data.StartDate)
                                    </dd>
                                    <dt class="col-sm-4">
                                        EndDate
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Model.Data.EndDate)
                                    </dd>
                                </dl>
                                <form method="post">
                                    <input type="hidden" asp-for="Model.ID" />
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                <a asp-page="./Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
